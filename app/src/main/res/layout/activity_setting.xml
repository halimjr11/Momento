<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_theme_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/setting_theme_label"
        android:textColor="@color/title_text_color"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <AutoCompleteTextView
            android:id="@+id/theme_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_theme"
            android:drawablePadding="10dp"
            android:inputType="none"
            android:text="@string/setting_theme_label" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/setting_language_label"
        android:textColor="@color/title_text_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/language_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:focusable="auto"
        android:padding="8dp"
        android:drawableStart="@drawable/ic_language"
        android:drawablePadding="10dp"
        android:background="@drawable/background_secondary_button"
        android:textAllCaps="false"
        android:text="Pilih Bahasa" />

</LinearLayout>
